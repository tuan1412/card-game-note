<form class="text-center" id="firstForm" method="POST">
    <div class="form-group">
        <input type="text" id="p1" class="form-control" placeholder="Player 1...">
    </div>
    <div class="form-group">
        <input type="text" id="p2" class="form-control" placeholder="Player 2...">
    </div>
    <div class="form-group">
        <input type="text" id="p3" class="form-control" placeholder="Player 3...">
    </div>
    <div class="form-group">
        <input type="text" id="p4" class="form-control" placeholder="Player 4...">
    </div>
    <button type="submit" class="btn">CREATE A NEW GAME</button>
</form>

<script>
    $(document).ready(function () {
        $("#firstForm").submit(function (e) {
            e.preventDefault();

            let p1name = $("#p1").val();
            let p2name = $("#p2").val();
            let p3name = $("#p3").val();
            let p4name = $("#p4").val();

            $.ajax({
                url: "/api/game",
                type: "POST",

                data: {
                    player: [p1name, p2name, p3name, p4name]
                }

            }).then(response => window.location.href = `/game/${response.gameId}`);
        })
    })
</script>